*/
module beginActiveCounter ();
	input  logic clk, reset;
	input  logic startStandby;
	
	output logic 
	
	integer count;
	
	// 
	initial begin
		count = -1;
	end
	
	
	// 
	always_comb begin
		if (count == (25000000 - 1)) begin
			beginActive = 1;
		end else begin
			beginActive = 0;
		end
	end
	
	// 
	always_ff @(posedge clk) begin
		if (reset) begin
			count <= -1;
		end else if ((count == -1) && startActive) begin
			count <= 0;
		end else if (count >= 0) begin
			count <= count + 1;
		end
	end
	
endmodule
